@page
@inject SignInManager<tiendaOnlineUser> SignInManager
@inject UserManager<tiendaOnlineUser> UserManager
@model VendedorModel
@{
    ViewData["Title"] = "Informacion de Vendedor";
}

<h4>@ViewData["Title"]</h4>


@if (await UserManager.IsInRoleAsync(await UserManager.GetUserAsync(User), "Seller"))
{
    <a class="btn btn-danger" asp-controller="Direcciones" asp-action="IndexVendedor"><i class="fas fa-map-marker-alt"></i> Mis Direcciones de Vendedor</a><br />
    <a class="btn btn-success" asp-controller="Tarjetas" asp-action="IndexVendedor"><i class="fas fa-credit-card"></i> Mis Tarjetas de Vendedor</a><br />
    <a class="btn btn-warning" asp-controller="DetalleVendedores" asp-action="Index"><i class="fas fa-user-tie"></i> Mis Detalles</a>
}

else
{
    <li><a asp-controller="DetalleVendedores" asp-action="Create">Conviertete en Vendedor</a></li>
}