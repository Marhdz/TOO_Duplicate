@page
@model IndexModel
@{
    ViewData["Title"] = "Perfil";
}

<h4>@ViewData["Title"]</h4>
@Html.Partial("_StatusMessage", Model.StatusMessage)
<div class="row">
    <div class="col-md-6">
        <form id="profile-form" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                @*<label asp-for="Username">Usuario</label>
                <input asp-for="Username" class="form-control" disabled />*@
            </div>
            <div class="form-group">
                <label asp-for="Input.Email">Correo electrónico</label>
                @if (Model.IsEmailConfirmed)
                {
                    <div class="input-group">
                        <input asp-for="Input.Email" class="form-control" disabled />
                        <span class="input-group-addon" aria-hidden="true"><span class="glyphicon glyphicon-ok text-success"></span></span>
                    </div>
                }
                else
                {
                    <input asp-for="Input.Email" class="form-control" />
                    <button id="email-verification" type="submit" asp-page-handler="SendVerificationEmail" class="btn btn-link">Enviar correo de confirmacion</button>
                }
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.PhoneNumber">Teléfono</label>
                <input asp-for="Input.PhoneNumber" class="form-control" />
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Nombres">Nombres</label>
                <input asp-for="Input.Nombres" class="form-control" />
                <span asp-validation-for="Input.Nombres" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Apellidos">Apellidos</label>
                <input asp-for="Input.Apellidos" class="form-control" />
                <span asp-validation-for="Input.Apellidos" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.FecheDeNacimiento">Fecha de Nacimiento </label>
                <input type="date" min="1940-01-01" max="2004-01-01" step="2" asp-for="Input.FecheDeNacimiento" class="form-control" />
                <span asp-validation-for="Input.FecheDeNacimiento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Sexo" class="control-label"></label>
                <select asp-for="Input.Sexo" class="form-control" asp-items="Html.GetEnumSelectList<Sexo>()"></select>
                <span asp-validation-for="Input.Sexo" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-default">Guardar</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
