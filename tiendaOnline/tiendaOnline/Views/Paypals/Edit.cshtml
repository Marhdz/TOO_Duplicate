@model tiendaOnline.Models.Paypal

@{
    ViewData["Title"] = "Editar cuenta Paypal registrada";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Editar cuenta Paypal registrada</h2>

<h4>Detalles</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="PaypalID" />
            <div class="form-group">
                <label asp-for="correoPaypal" class="control-label"></label>
                <input asp-for="correoPaypal" class="form-control" />
                <span asp-validation-for="correoPaypal" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="psswrdPaypal" class="control-label"></label>
                <input asp-for="psswrdPaypal" class="form-control" />
                <span asp-validation-for="psswrdPaypal" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="tiendaOnlineUserID" class="control-label"></label>
                <select asp-for="tiendaOnlineUserID" class="form-control" asp-items="ViewBag.tiendaOnlineUserID"></select>
                <span asp-validation-for="tiendaOnlineUserID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-primary" asp-action="Index"><i class="fa fa-home"></i> Cuentas Paypal</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
