@model IEnumerable<tiendaOnline.Models.Paypal>

@{
    ViewData["Title"] = "Cuentas Paypal";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Cuentas Paypal</h2>

<p>
    <a class="btn btn-info" asp-action="Create"><i class="fas fa-plus"></i> Agregar </a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.correoPaypal)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.psswrdPaypal)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.tiendaOnlineUser)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.correoPaypal)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.psswrdPaypal)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.tiendaOnlineUser.Id)
            </td>
            <td>
                <a class="btn btn-success" asp-action="Edit" asp-route-id="@item.PaypalID"><i class="fa fa-pen"></i></a>
                <a class="btn btn-info" asp-action="Details" asp-route-id="@item.PaypalID"><i class="fa fa-info"></i></a>
                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.PaypalID"><i class="fa fa-trash-alt"></i></a>
            </td>
        </tr>
}
    </tbody>
</table>
