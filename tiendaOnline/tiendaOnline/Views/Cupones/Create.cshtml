@model tiendaOnline.Models.Cupon

@{
    ViewData["Title"] = "Nuevo cupón";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Nuevo cupón</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="descripcionCupon" class="control-label"></label>
                <input asp-for="descripcionCupon" class="form-control" />
                <span asp-validation-for="descripcionCupon" class="text-danger"></span>
            </div>  
            <div class="form-group">
                <label asp-for="codigoCupon" class="control-label"></label>
                <input asp-for="codigoCupon" class="form-control" />
                <span asp-validation-for="codigoCupon" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="montoCupon" class="control-label"></label>
                <input asp-for="montoCupon" class="form-control" />
                <span asp-validation-for="montoCupon" class="text-danger"></span>
            </div>
            <br />
            <b>El cupón tendrá un periodo de 1 mes de validez</b>
            <br />
            <div class="form-group">
                <input type="submit" value="Crear" class="btn btn-success" />  <a class="btn btn-primary" asp-action="Index"><i class="fa fa-home"></i> Cupones</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
