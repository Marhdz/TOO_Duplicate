@model tiendaOnline.Models.Departamento

@{
    ViewData["Title"] = "Eliminar departamento";
}

<h2>Eliminar</h2>

<h3>¿Realmente desea eliminar este departamento?</h3>
<div>
    <h4>Detalles</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.nombreDepartamento)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.nombreDepartamento)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="DepartamentoID" />
        <input type="submit" value="Eliminar" class="btn btn-default" />
        <a class="btn btn-primary" asp-action="Index"><i class="fa fa-home"></i> Departamentos</a>
    </form>
</div>
