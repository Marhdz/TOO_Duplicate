            <th>
                @Html.DisplayNameFor(model => model.producto)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Descripcion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Talla)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Color)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PesoKg)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Marca)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Modelo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.producto.Codigo)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.DetalleProductoID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.DetalleProductoID">Details</a> 
