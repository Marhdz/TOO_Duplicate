@model tiendaOnline.Models.Descuento

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Editar descuento</h2>

<h4>Descuento</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="DescuentoID" />
            <input type="hidden" asp-for="ProductoID"/>
            <div class="form-group">
                <label asp-for="NombreDelDescuento" class="control-label"></label>
                <input asp-for="NombreDelDescuento" class="form-control" />
                <span asp-validation-for="NombreDelDescuento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TipoDeDescuento" class="control-label"></label><br />
                @Html.RadioButtonFor(model => model.TipoDeDescuento, "false") Por Cantidad(máximo $100)<br />
                @Html.RadioButtonFor(model => model.TipoDeDescuento, "true") Por Porcentaje(ingresar numeros enteros)
            </div>
            <div class="form-group">
                <label asp-for="MontoDeDescuento" class="control-label"></label>
                <input asp-for="MontoDeDescuento" class="form-control" />
                <span asp-validation-for="MontoDeDescuento" class="text-danger"></span>
            </div>
           
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Regresar</a>
</div>

