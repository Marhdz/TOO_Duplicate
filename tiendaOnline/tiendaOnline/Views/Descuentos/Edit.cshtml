@model tiendaOnline.Models.Descuento

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>Descuento</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="DescuentoID" />
            <div class="form-group">
                <label asp-for="NombreDelDescuento" class="control-label"></label>
                <input asp-for="NombreDelDescuento" class="form-control" />
                <span asp-validation-for="NombreDelDescuento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="TipoDeDescuento" /> @Html.DisplayNameFor(model => model.TipoDeDescuento)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="MontoDeDescuento" class="control-label"></label>
                <input asp-for="MontoDeDescuento" class="form-control" />
                <span asp-validation-for="MontoDeDescuento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PrecioConDesc" class="control-label"></label>
                <input asp-for="PrecioConDesc" class="form-control" />
                <span asp-validation-for="PrecioConDesc" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductoID" class="control-label"></label>
                <select asp-for="ProductoID" class="form-control" asp-items="ViewBag.ProductoID"></select>
                <span asp-validation-for="ProductoID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

