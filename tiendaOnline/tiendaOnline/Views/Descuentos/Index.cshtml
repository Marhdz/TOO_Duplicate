@model IEnumerable<tiendaOnline.Models.Descuento>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NombreDelDescuento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TipoDeDescuento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MontoDeDescuento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PrecioConDesc)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.producto)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NombreDelDescuento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TipoDeDescuento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MontoDeDescuento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PrecioConDesc)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.producto.Codigo)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.DescuentoID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.DescuentoID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.DescuentoID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
