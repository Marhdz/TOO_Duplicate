                @Html.DisplayFor(modelItem => item.producto.Codigo)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.TipoDeDescuentoID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.TipoDeDescuentoID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.TipoDeDescuentoID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
