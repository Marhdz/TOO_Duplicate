@model IEnumerable<tiendaOnline.Models.Categoria>

@{
    ViewData["Title"] = "Categorias";
}

<h2>Categorias</h2>

<p>
    <a class="btn btn-info" asp-action="Create"><i class="fas fa-plus"></i> Agregar </a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.nombre_categoria)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.stockMax)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.stockMin)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.nombre_categoria)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.stockMax)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.stockMin)
            </td>
            <td>
                <a class="btn btn-success" asp-action="Edit" asp-route-id="@item.CategoriaID"><i class="fas fa-pen"></i></a>
                <a class="btn btn-info" asp-action="Details" asp-route-id="@item.CategoriaID"><i class="fas fa-info"></i></a>
                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.CategoriaID"><i class="far fa-trash-alt"></i></a>
            </td>
        </tr>
}
    </tbody>
</table>
