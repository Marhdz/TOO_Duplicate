@model tiendaOnline.Models.Categoria

@{
    ViewData["Title"] = "Editar";
}

<h2>@Model.nombre_categoria</h2>

<h4>Editar</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CategoriaID" />
            <div class="form-group">
                <label asp-for="nombre_categoria" class="control-label"></label>
                <input asp-for="nombre_categoria" class="form-control" />
                <span asp-validation-for="nombre_categoria" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="stockMax" class="control-label"></label>
                <input asp-for="stockMax" class="form-control" />
                <span asp-validation-for="stockMax" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="stockMin" class="control-label"></label>
                <input asp-for="stockMin" class="form-control" />
                <span asp-validation-for="stockMin" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar cambios" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-primary" asp-action="Index"><i class="fa fa-home"></i> Categorias</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
