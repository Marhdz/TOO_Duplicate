@model tiendaOnline.Models.DetalleVendedor
@using Microsoft.AspNetCore.Identity
@using tiendaOnline.Areas.Identity.Data
@inject UserManager<tiendaOnlineUser> UserManager


@{
    ViewData["Title"] = "Convertirse en vendedor";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@if (await UserManager.IsInRoleAsync(await UserManager.GetUserAsync(User), "Seller"))
{
    <br />
    <br />
    <h3>Ya te has registrado en nuestra familia de vendedores! :D </h3>
}

else
{
    <div class="col-md-11 text-center" style="border:double; color:indigo">
        
            <h2><b>Vendedor</b></h2>

            <h4>  <b>  Qué esperas para formar de la gran familia iBuy y comenzar a vender tus productos!    Regístrate como vendedor ahora.</b></h4>
            <h4><b>Al finalizar tu registro como vendedor se cerrara tu sesión actual, pero tranquilo, es para recargar tu informacion en nuestra base datos y puedas disfrutar todos nuestros servicios!</b></h4>
       
</div>
<hr />
   
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <br /><br />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="nombreComercial" class="control-label"></label>
                <input asp-for="nombreComercial" class="form-control" />
                <span asp-validation-for="nombreComercial" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="correoComercial" class="control-label"></label>
                <input asp-for="correoComercial" class="form-control" />
                <span asp-validation-for="correoComercial" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="tipoVendedor" class="control-label"></label>
                <select asp-for="tipoVendedor" class="form-control" asp-items="Html.GetEnumSelectList<TipoVendedor>()"></select>
                <span asp-validation-for="tipoVendedor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Convertirme en vendedor" class="btn btn-primary" /> <a class="btn btn-default" asp-controller="Home" asp-action="Index"><i class="fa fa-home"></i> Regresar</a>
            </div>
        </form>
    </div>
</div>

}
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
