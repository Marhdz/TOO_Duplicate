@model IEnumerable<tiendaOnline.Models.Orden>

@{
    ViewData["Title"] = "Órdenes de compra";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Órdenes de compra</h2>

<p>
    <a class="btn btn-info" asp-action="Create"><i class="fas fa-plus"></i> Agregar </a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.fechaOrden)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.total)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.estadoDeOrden)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.tiendaOnlineUser)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.metodoEnvio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.cupon)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.fechaOrden)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.total)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.estadoDeOrden)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.tiendaOnlineUser.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.metodoEnvio.nombreMetodoEnvio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.cupon.CuponID)
            </td>
            <td>
                <a class="btn btn-success" asp-action="Edit" asp-route-id="@item.OrdenID"><i class="fa fa-pen"></i></a>
                <a class="btn btn-info" asp-action="Details" asp-route-id="@item.OrdenID"><i class="fa fa-info"></i></a>
                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.OrdenID"><i class="fa fa-trash-alt"></i></a>
            </td>
        </tr>
}
    </tbody>
</table>
