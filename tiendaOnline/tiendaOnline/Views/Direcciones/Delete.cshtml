@model tiendaOnline.Models.Direccion

@{
    ViewData["Title"] = "Eliminar dirección";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Eliminar</h2>

<h3>¿Está seguro de que desea eliminar esta información?</h3>
<div>
    <h4>Detalles</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.direccionDetallada)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.direccionDetallada)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.codigoPostal)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.codigoPostal)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Municipio)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Municipio.nombreMunicipio)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.tiendaOnlineUser)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.tiendaOnlineUser.Id)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.detalleVendedor)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.detalleVendedor.correoComercial)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="DireccionID" />
        <input type="submit" value="Eliminar" class="btn btn-default" /> |
        <a href='javascript:history.go(-1)'>Regresar a la lista</a>
    </form>
</div>
