@model tiendaOnline.Models.Municipio

@{
    ViewData["Title"] = "Nuevo municipio";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Registra Municipio</h2>

<h4>Detalles</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Departamento" class="control-label"></label>
                <select asp-for="DepartamentoID" class="form-control" asp-items="ViewBag.DepartamentoID"></select>
                <!--  <span asp-validation-for="DepartamentoID" class="text-danger"></span>-->
            </div>
            <div class="form-group">
                <label asp-for="nombreMunicipio" class="control-label"></label>
                <input asp-for="nombreMunicipio" class="form-control" />
              <span asp-validation-for="nombreMunicipio" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Registrar" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-primary" asp-action="Index"><i class="fa fa-home"></i> Municipios</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
