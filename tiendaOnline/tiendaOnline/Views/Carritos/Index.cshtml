@model tiendaOnline.ViewModels.CarritoVM

<div class="row checkoutForm">
    <h2>Tu carrito de compras</h2>
    <h4>Aqui estan los productos que has agregado.</h4>
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Selección</th>
                <th>Producto</th>
                <th>Nombre del producto</th>
                <th>Cantidad <br />seleccionada</th>
                <th class="text-right">Precio</th>
                <th class="text-right">Subtotal</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var linea in Model.Carrito.prodCarrito)
            {
            <tr>
                <!--Con esta linea selecciona los que desea comprar ahorita es una prueba-->
                <td class="text-center"><a class="glyphicon glyphicon-check" asp-controller="Carritos" asp-action="SeleccionarDeCarrito" asp-route-productoID="@linea.producto.ProductoID"></a></td>
                
                <td class="text-center"><div class="col-md-2">  <a asp-controller="DetalleProductos" asp-action="Details" asp-route-id="@linea.ProdCarritoID"> <img class="zoom" height=120px width=130px src="~/images/productos/@Html.DisplayFor(modelItem => linea.producto.Imagen)" /> </a></td>
                <td class="text-center"><b>$ @Html.DisplayFor(modelItem => linea.producto.NombreProducto)</b></td>
                <td class="text-center">o</td>
                <td class="text-right"><i>$ @Html.DisplayFor(modelItem => linea.producto.PrecioUnitario)</i></td>
                <td class="text-right">
                    @((linea.cantidadProducto * linea.producto.PrecioUnitario).ToString("c"))
                </td>
                <td class="text-center"><a class="glyphicon glyphicon-remove text-danger remove" asp-controller="Carritos" asp-action="EliminarDeCarrito" asp-route-productoID="@linea.producto.ProductoID"></a></td>
            </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <td colspan="3" class="text-right">Total:</td>
                <td class="text-right">
                    @Model.TotalCarrito.ToString("c")
                </td>
            </tr>
        </tfoot>
    </table>

</div>