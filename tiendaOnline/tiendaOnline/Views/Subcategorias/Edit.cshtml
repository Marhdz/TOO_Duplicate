@model tiendaOnline.Models.Subcategoria

@{
    ViewData["Title"] = "Editar subcategoria";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Editar subcategoria</h2>

<h4>Detalles</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="SubcategoriaID" />
            <div class="form-group">
                <label asp-for="nombreSubcategoria" class="control-label"></label>
                <input asp-for="nombreSubcategoria" class="form-control" />
                <span asp-validation-for="nombreSubcategoria" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CategoriaID" class="control-label"></label>
                <select asp-for="CategoriaID" class="form-control" asp-items="ViewBag.CategoriaID"></select>
                <span asp-validation-for="CategoriaID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-primary" asp-action="Index"><i class="fa fa-home"></i> Subcategorias</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
