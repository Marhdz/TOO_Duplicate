@model IEnumerable<tiendaOnline.Models.Subcategoria>

@{
    ViewData["Title"] = "Subcategorias";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Subcategorias</h2>

<p>
    <a class="btn btn-info" asp-action="Create"><i class="fas fa-plus"></i> Nueva </a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Subcategorias
            </th>
            <th>
                Categorias
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.nombreSubcategoria)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Categoria.nombre_categoria)
            </td>
            <td>
                <a class="btn btn-success" asp-action="Edit" asp-route-id="@item.SubcategoriaID"><i class="fa fa-pen"></i></a>
                <a class="btn btn-info" asp-action="Details" asp-route-id="@item.SubcategoriaID"><i class="fa fa-info"></i></a>
                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.SubcategoriaID"><i class="fa fa-trash-alt"></i></a>
            </td>
        </tr>
}
    </tbody>
</table>
