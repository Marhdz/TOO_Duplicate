                <a asp-action="Edit" asp-route-id="@item.DireccionID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.DireccionID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.DireccionID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
